{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "baseUrl": ".",
    "strict": false,
    "lib": ["es2020", "dom", "dom.iterable"]
  },
  "include": ["scripts/**/*", "api/**/*", "types/**/*", "utils/**/*"]
}
